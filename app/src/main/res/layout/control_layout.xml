<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:inputType="text"
        android:text="@string/patro_controller"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintWidth_max="488dp"
        app:layout_constraintWidth_min="0dp"
        tools:ignore="LabelFor" />
    <Button
        android:id="@+id/buttonToBle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintWidth_max="488dp"
        app:layout_constraintWidth_min="0dp" />


    <Button
        android:id="@+id/buttonUp"
        android:layout_width="102dp"
        android:layout_height="64dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/UP"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/buttonRight"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toEndOf="@id/buttonLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="102dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/LEFT"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/buttonDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonUp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonRight"
        android:layout_width="102dp"
        android:layout_height="64dp"
        android:layout_marginEnd="332dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/RIGHT"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/buttonDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonUp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonRotRight"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/rot_button"
        android:gravity="center"
        android:text="@string/rotate_right"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRotLeft"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/rot_button"
        android:gravity="center"
        android:text="@string/rotate_left"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="102dp"
        android:layout_height="64dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/DOWN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBreak"
        android:layout_width="181dp"
        android:layout_height="165dp"
        android:layout_marginStart="504dp"
        android:layout_marginTop="184dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="@string/brake"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>